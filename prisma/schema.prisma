generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        

model SensorReading {
  id          Int      @id @default(autoincrement())
  sensor_id   String
  timestamp   DateTime @default(now())
  temperature Float
  humidity    Float

  @@index([sensor_id, timestamp])
}
